{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
